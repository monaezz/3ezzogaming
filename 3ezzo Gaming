  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const videos = document.querySelectorAll('.smoke-video');
      
      // Try to play videos
      videos.forEach(video => {
        const playPromise = video.play();
        if (playPromise !== undefined) {
          playPromise.catch(error => {
            console.log('Video playback prevented:', error);
          });
        }
      });
      
      // Mobile optimization
      if (window.innerWidth < 768) {
        document.querySelector('.smoke-video.left').style.display = 'none';
        document.querySelector('.smoke-video.right').style.width = '100%';
      }
      
      // Handle window resize
      window.addEventListener('resize', function() {
        if (window.innerWidth < 768) {
          document.querySelector('.smoke-video.left').style.display = 'none';
          document.querySelector('.smoke-video.right').style.width = '100%';
        } else {
          document.querySelector('.smoke-video.left').style.display = 'block';
          document.querySelector('.smoke-video.right').style.width = '50%';
        }
      });
    });
  </script>
